{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:8000"
      }
    }
  },
  "JWTSettings": {
    "SecretKey": "your_super_secret_key_that_is_at_least_32_characters_long_for_security",
    "Issuer": "your_issuer",
    "Audience": "your_audience",
    "AccessTokenExpirationMinutes": 2,
    "RefreshTokenExpirationDays": 1
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=app.db"
  }
}
